<%= form_for @playlist do |f| %>
	
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.collection_select(:user_id, 
							User.all,
							:id, 
							:name) %>
	<br>
	
	<%= f.fields_for :playlist_selections do |p| %>
		<%= p.collection_check_boxes(:song_ids, 
																Song.all, 
																:id, 
																:name
	) %> 
	<% end %>

	<%= f.submit %>
<% end %> 